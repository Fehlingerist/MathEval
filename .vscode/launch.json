{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
         {
            "name": "Debug Tester",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/test.exe",
            "args": ["${workspaceFolder}/tests/bundler.cpp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "prepare-test",
            "miDebuggerPath": "gdb"
        },
        {
            "name": "Debug Lexer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/lexer_debug.exe",
            "args": ["${workspaceFolder}/src/bundler.cpp"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "gdb"
        }
    ]
}